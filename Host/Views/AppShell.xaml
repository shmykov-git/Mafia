<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Host.Views.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Host.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Mafia Host" Navigated="Shell_Navigated" >

    <FlyoutItem Route="pages"                
                FlyoutDisplayOptions="AsMultipleItems">

        <ShellContent
            Icon="appicon.svg"
            Title="{Binding Messages[Players]}"
            ContentTemplate="{DataTemplate local:UserView}"
            Route="UserView" />

        <ShellContent
            Icon="start.jpg"            
            IsVisible="{Binding IsStartGameTabAvailable}"
            Title="{Binding Messages[NewGame]}"            
            ContentTemplate="{DataTemplate local:StartGameView}"
            Route="StartGameView" />

        <ShellContent
            Icon="game.png"
            IsVisible="{Binding IsGameTabAvailable}"
            Title="{Binding Messages[Game]}"
            ContentTemplate="{DataTemplate local:GameView}"
            Route="GameView" />
        
    </FlyoutItem>

    <ShellContent Route="UserView" />

</Shell>
