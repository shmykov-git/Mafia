<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Host.Views.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Host.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Mafia Host">

    <FlyoutItem Route="pages"
                FlyoutDisplayOptions="AsMultipleItems">
        
        <ShellContent
            Icon="start.jpg"
            Title="{Binding Messages[NewGame]}"
            ContentTemplate="{DataTemplate local:StartGameView}"
            Route="StartGameView" />
        
        <ShellContent
            Icon="game.png"
            Title="{Binding Messages[Game]}"
            ContentTemplate="{DataTemplate local:GameView}"
            Route="GameView" />
        
    </FlyoutItem>
    
    <ShellContent Route="StartGameView" />

</Shell>
