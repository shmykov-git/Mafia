<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Host.Views.StartGameView">
   
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Image
                Source="mafia.jpg"
                HeightRequest="185"
                Aspect="AspectFit" />

            <Label
                Text="{Binding PlayerRoleInfo}"
                Style="{StaticResource Headline}"
                HorizontalOptions="Start"
                SemanticProperties.HeadingLevel="Level1" />

            <ListView ItemsSource="{Binding ActiveRoles}" ItemTapped="ListView_ItemTapped" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid ColumnDefinitions="0.8*,0.2*">
                                <Label Grid.Column="0"
                                   TextColor="{Binding RoleColor}"
                                   Text="{Binding RoleName}"
                                   VerticalOptions="Center"
                                   VerticalTextAlignment="Center"                                       
                                   HorizontalOptions="Start"
                                   FontAttributes="Bold" />

                                <StackLayout Grid.Column="1" Orientation="Horizontal" HorizontalOptions="End">
                                    <Editor 
                                        IsVisible="{Binding IsCounter}"
                                        IsEnabled="{Binding IsSelected}"
                                        Text="{Binding Count}" />
                                    <CheckBox IsChecked="{Binding IsSelected}" VerticalOptions="Center"/>
                                </StackLayout>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <Button
                    Text="{Binding Messages[StartNewGame]}" 
                    SemanticProperties.Hint="Stop previouse game and start a new one"
                    Command="{Binding StartNewGameCommand}"
                    HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
